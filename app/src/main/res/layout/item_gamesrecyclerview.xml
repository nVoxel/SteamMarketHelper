<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marketrecyclerview_main"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/BottomNav"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="@color/CardStroke">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gamesrecyclerview_gametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:drawableLeft="@tools:sample/avatars"
        tools:text="Counter-Strike : Global Offensive"
        android:padding="10dp"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:gravity="center" />
</com.google.android.material.card.MaterialCardView>