<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SteamMarketHelper" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogDayTheme</item>
    </style>

    <style name="BottomSheetDialogDayTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/BottomNav</item>
    </style>

    <style name="BottomSheetDialogNightTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/BottomNav</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>
</resources>